  <div class="album py-5" id="lands">
    <div class="container-fluid">
      <div class="d-flex justify-content-end">
        
        <%= link_to land_show_images_path(@house), 
        class:"btn btn-pink ms-1" do %>
          <i class="bi bi-camera-fill"></i>
           Ver todas as fotos
        <% end %>

        <%= render "favorite_houses/form", 
        favorite_house: favorite_house_built(@house) %>
    
       </div>
        <div class="row my-1">
            <% if @house.house_images.attached? %>
              <div class="col-sm-6">
                  <%= image_tag(@house.house_images.first, 
                  class: "bd-placeholder-img card-img-top", width:"100%", height:"390")%>
              </div>
              <div class="col">
                <div class="row">
                    <%= render "images_show", images: @house.house_images %>
                </div>
              </div>
            <% end %>
        </div>

    </div>
  </div>

  <div class="container">
    <div class="d-grid gap-2">
      <%= link_to "Editar", edit_house_path(@house), class:"btn btn-info" %> 
      <%= button_to "Eliminar", @house, method: :delete, class:"btn btn-danger  my-1 col-sm-12" %>
    </div>

    <br>
    <p>
      <strong class="fs-4 text-pink">
        <%= @house.address.street %>, 
        <%= @house.address.city.city_name %>,  
        <%= @house.address.city.province.province_name %>
        <i class="bi bi-geo-alt-fill fs-4"></i>
      </strong>
    </p>
    
    <h1 class="fs-3">
        <%= @house.title %>
    </h1>
    <p class="fs-3 text-pink">
       <%= @house.price %> Kz  <span class="fs-5">/mês</span>
    </p>
   
    
   <div class="fs-3">

    <div class="d-inline">
      Largura: <%= @house.dimention.height_d %> m², 
      Comprimento: <%= @house.dimention.width_d %> m²
    </div>
   
   </div>

    <div class="row">
      <div class="col-sm-8">
        
        <hr class="text-pink"> <br>
        <strong class="text-pink">Descrição: </strong>
        <p class="text-description">
          <%= @house.description %>
        </p>

        <br>
        <hr class="text-pink">

      <!-- houses -->
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 g-3" id="houses">
        <% @profile.houses.each do |house| %>
          <%= render house %>
        <% end %>
      </div>
      <!-- End lands -->

      </div>
      
  
      <!-- reservation-->
      <div class="col d-flex justify-content-center">
        <div class="card fixed" style="width: 18rem; height: 450px ;">
          <div class="card-body">
            <h5 class="card-title text-pink text-center">proprietário</h5>
            <p class="card-text text-center text-description">
              <%= @profile.name_profile %>
            </p>
            <p class="card-text text-center text-description">
              Breve introdução da empresa ou do proprietário
              <br>
              <%= @profile.phone1 %>, <%= @profile.phone1 %>, 
              <%= @profile.user.email %>
            </p>
            <form action="">
              <div class="mb-3">
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Seu nome">
              </div>
              <div class="mb-3">
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
              </div>
              <div class="mb-3">
                <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Sua mensagem" rows="3"></textarea>
              </div>
              <div class="d-grid gap-2">
                <button class="btn btn-pink" type="button">Enviar</button>
              </div>
            </form>
          </div>
        </div>
      
      </div>
      <!-- End reservation-->
    </div>
  </div>


