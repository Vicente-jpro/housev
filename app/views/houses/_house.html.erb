  <%= link_to house, class: "link-offset-2 link-underline link-underline-opacity-0" do %>
      
    <div class="col" id="<%= dom_id house %>">
      <div class="card border-light shadow-sm mb-5 bg-body-tertiary rounded">
      

          <% if house.house_images.attached? %>
            <%= render "images_index", images: house.house_images %>
          <% end %>
      

        <div class="card-body">
          <p class="card-text">

            <strong class="text-pink">
              <%= house.title %>, 
              <%= house.tipology %>
              <%= house.address.city.province.province_name %>
            </strong> <br>
          </p>

            <p class="text-primary-emphasis">
              <%=  house.description %>
            </p>

            <div class="d-inline">
              <strong class="text-pink"><%= house.price %> Kz</strong>
            </div>
            <div class="d-inline px-5">
              <strong class="text-pink"> <%= house.type_negotiation %></strong> 
            </div>
              
        </div>
      </div>
    </div>
  <% end %>