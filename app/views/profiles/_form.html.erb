
 <div class="container col-lg-6 my-4">
    <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="card-body">
        <div class="card-title">
            <div class="d-flex justify-content-center">

              <%= render "image", image_profile: profile.image %>
              
            </div>
            <h4 class="text-center text-pink">Editar Perfil</h4>
        </div>
        <div class="row my-2">
          <%= bootstrap_form_with(model: profile) do |form| %>
            <% if profile.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

                <ul>
                  <% profile.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div>
              <%= form.text_field :name_profile, label: "Name"%>
              <%= form.file_field :image %>  
              <%= form.select :gender, Profile.genders, {label: :gender}%>

              <%= form.select :profile_type, Profile.profile_types, {label: "Tipo do perfil"} %>
              <%= form.telephone_field :phone1, label: "Phone1"%>
              <%= form.telephone_field :phone2, label: "Phone2" %>
              <%= form.collection_select :province_id, Province.order(:province_name), :id, :province_name, { label: "Provincia"}  %>
                
              <%= form.fields_for :address do |address_form| %>
                <%= address_form.collection_select :city_id, City.order(:city_name), :id, :city_name, { label: "Municipio/Cidade"}  %>
                <%= address_form.text_field :street, label: :street%>
              <% end %> 
      
            </div>

            <div class="mb-3 d-grid gap-2">
              <%= form.submit class: "btn btn-info" %>
            </div>
          <% end %>

        </div>
    </div>
  </div>