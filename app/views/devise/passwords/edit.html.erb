<main class="container col-lg-6 my-4">
    <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="card-body">
          <div class="card-title">
              <h4 class="text-center text-pink">Change your password</h4>
          </div>
            <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="field">
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", label: :password %>
              </div>

              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", label: :password_confirmation %>
              </div>

              <div class="actions">
                <%= f.submit "Change my password" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</main>