

<main class="container col-lg-6 my-4">
    <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="card-body">
          <div class="card-title">
              <h4 class="text-center text-pink">Log in</h4>
          </div>
            <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", label: :email %>
              </div>

              <div class="field">
                <%= f.password_field :password, autocomplete: "current-password", label: :password %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me, label: :remember_me%>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Log in" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</main>
