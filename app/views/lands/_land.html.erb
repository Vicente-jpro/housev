<div id="<%= dom_id land %>">
  <p>
    <strong>Title land:</strong>
    <%= land.title_land %>
  </p>

  <p>
    <strong>Photo:</strong>

    <%= land.images.size %>
    <% if land.images.attached? %>
      <% land.images.each do |image| %>
        <%= image_tag(image) %>
        <%= link_to image.filename, image  %>
      <% end %>
    <% end %>
  </p>


  <p>
    <strong>Description:</strong>
    <%= land.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= land.price %>
  </p>

  <p>
    <strong>Dimention:</strong>
    <%= land.dimention_id %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= land.address_id %>
  </p>

</div>
